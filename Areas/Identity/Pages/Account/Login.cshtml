@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center">
    <div class="row">
        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div class="container">
                    <div role="main" class="pb-3">
                        @if (TempData[LoginModel.AlertSuccess] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @Html.Raw(@TempData[LoginModel.AlertSuccess])
                            </div>
                        }
                        @if (TempData[LoginModel.AlertDanger] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @Html.Raw(@TempData[LoginModel.AlertDanger])
                            </div>
                        }
                        @if (TempData[LoginModel.AlertWarning] != null)
                        {
                            <div class="alert alert-warning" role="alert">
                                @Html.Raw(@TempData[LoginModel.AlertWarning])
                            </div>
                        }
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
